{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Heronote",
  "version": "0.1.0",
  "identifier": "com.heronote.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Heronote",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "macOS": {
      "entitlements": "./entitlements.plist",
      "minimumSystemVersion": "14.0"
    }
  }
}
