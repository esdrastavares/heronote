{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "core:window:default",
    "shell:allow-open",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$LOCALDATA/**/*" },
        { "path": "$DATA/**/*" }
      ]
    }
  ]
}
